<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/customer_attributes.xsd">
    <entity_type code="customer">
        <attribute code="custom_attribute_code">
            <label>Custom Attribute Label</label>
            <type>varchar</type>
            <input>text</input>
            <position>1000</position>
            <visible>true</visible>
            <system>false</system>
            <required>false</required>
            <user_defined>true</user_defined>
            <sort_order>150</sort_order>
            <validate_rules>
                <rule name="max_text_length" value="255"/>
                <rule name="min_text_length" value="1"/>
            </validate_rules>
            <used_in_forms>
                <form>adminhtml_customer</form>
                <form>customer_account_create</form>
                <form>customer_account_edit</form>
            </used_in_forms>
        </attribute>
    </entity_type>
</config>
