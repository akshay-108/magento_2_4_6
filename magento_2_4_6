upstream fastcgi_backend_local {
  server  unix:/run/php/php8.2-fpm.sock;
}

server {

  listen 80;
  server_name local.kdshop.com;
  set $MAGE_ROOT /var/www/html/magento_2_4_6;
  include /var/www/html/magento_2_4_6/nginx.conf.sample;
  
  location /adminer {
        alias /usr/share/adminer/adminer.php;
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
    }

}
